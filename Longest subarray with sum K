class Solution{
public:
    int longestSubarray(vector<int> &nums, int k){
        map<long long,int> mp;
        long long sum(0); int maxLen(0);

        for(int i(0);i < nums.size();i++){
            sum += nums[i];
            if(sum == k){
                maxLen = max(maxLen, i + 1);
            }

            if(mp.find(sum - k) != mp.end()){
                maxLen = max(maxLen, i - mp[sum - k]);
            }

            mp[sum] = i;
        }

        return maxLen;
    }
};
