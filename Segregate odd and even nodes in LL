class Solution {
public:
    ListNode* oddEvenList(ListNode* head) {
        ListNode* odd = new ListNode(0);
        ListNode* oddptr = odd;
        ListNode* even = new ListNode(0);
        ListNode* evenptr = even;

        int cnt(0);
        while(head != nullptr){
            cnt++;
            if(cnt & 1){
                ListNode* oddcnt = new ListNode(head -> val);
                odd -> next = oddcnt;
                odd = odd -> next;
            }
            else{
                ListNode* evencnt = new ListNode(head -> val);
                even -> next = evencnt;
                even = even -> next;
            }

            head = head -> next;
        }

        evenptr = evenptr -> next;
        odd -> next = evenptr;
        return oddptr -> next;
    }
};
