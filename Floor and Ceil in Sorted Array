class Solution {
public:
    vector<int> getFloorAndCeil(vector<int> nums, int x) {
        int left = 0, right = int(nums.size() - 1);
        int ans(-1);
        
        while (left <= right) {
            int mid = left + (right - left + 1) / 2;
            if (nums[mid] <= x) {
                ans = nums[mid];
                left = mid + 1;
            } 
            else {
                right = mid - 1;
            }
        }
        
        return ans;
    }
};
